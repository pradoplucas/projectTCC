{{> navbarOtherNot }}

<div class="mastdiv">
    <div class="container-fluid h-100">
        <div class="row h-100 align-items-center text-center">
            <div class="col-12 div-margin">
                <h1 class="fsc-2 mb-3">Criar</h1>

                <div class="row justify-content-center text-center">
                    <div class="col-10 col-sm-6 col-md-5 col-lg-4 justify-content-center box-custom mb-0 text-black">

                        <div class="form-floating mb-3 mt-4">
                            <input name="email" type="email" class="form-control form-control-sm" id="floatingInputEmail" placeholder="email" onkeyup="textIsValid('Email', this.value)">
                            <label id="labelEmail" for="floatingInputEmail">E-mail</label>
                        </div>

                        <div class="row mb-2">
                            <div class="col-10 pe-0">
                                <div class="form-floating">
                                    <input name="password" type="password" class="form-control form-control-sm" id="floatingInputPassword" placeholder="senha" onkeyup="textIsValid('Password', this.value)">
                                    <label id="labelPassword" for="floatingInputPassword">Senha</label>
                                </div>
                            </div>

                            <div class="col-2 ps-0">
                                <button class="btn btn-dark w-100 h-100 eye-border" type="button" id="buttonEye">
                                    <i class="fas fa-eye-slash" id="iconEye"></i>
                                </button>
                            </div>
                        </div>

                        <button onclick="submitButton()" class="btn btn-dark w-100 mb-4 mt-2">Criar</button>

                    </div>
                    <p class="text-center mt-1 mb-4">Já tem uma conta? <a href="/signIn" class="link-custom-1">Entrar</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalSuccess" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Conta criada com sucesso</h5>
            </div>
            <div class="modal-body text-center">

                <label class="form-label">Para finalizar a verificação da conta, um link foi enviado para seu e-mail</label><br>
                <label class="form-label">Verifique a caixa da SPAM se necessário</label><br>
            </div>
            <div class="modal-footer">
                <a href="/"><button type="button" class="btn btn-success">Página inicial</button></a>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalFail" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Problemas ao criar a conta</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                <label class="form-label">Houveram alguns problemas na criação da conta</label><br>
                <label class="form-label">Verifique os dados e tente mais tarde</label><br>
            </div>
            <div class="modal-footer">
                <a href="/signUp"><button type="button" class="btn btn-danger">Recarregar</button></a>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalLoading" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Enviando E-mail</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                <div class="spinner-border text-dark" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>

        </div>
    </div>
</div>


<script src="/js/ext/jquerry.js"></script>
<script src="/js/signUp.js"></script>
