{{#if logged }}
    {{> navbarOtherLog }}
{{else}}
    {{> navbarOtherNot }}
{{/if}}

<div class="mastdiv">
    <div class="container-fluid h-100">
        <div class="row justify-content-center text-center">
            <div class="col-sm-7 col-lg-5 col-11 my-4">

                <div class="input-group input-group-lg">
                    <input id="inputSearchP" type="text" class="form-control text-center" placeholder="Digite um Nome" onkeyup="getPersonSearch(this.value)">
                </div>

                <ul id="ulSearch" class="overflow-auto d-none">
                </ul>

            </div>
        </div>

        <section id="divInfo">
            <div class="container-fluid p-0">
                <div class="row justify-content-center text-center">

                    <div class="col-11 col-sm-10">
                        <div id="infoAll" class="row justify-content-center text-center">

                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<div class="modal fade" id="modalLoading" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Preparando Download</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                <div class="spinner-border text-dark" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>

        </div>
    </div>
</div>

<script src="/js/ext/jquerry.js"></script>
<script src="/js/searchPerson.js"></script>